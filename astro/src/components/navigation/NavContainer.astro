---
import ReactNav from '@/components/navigation/ReactNav.tsx';
---

<nav class="flex items-center gap-3">
  {/* Status indicator - will be hydrated by React */}
  <div id="nav-status-icon" data-x-kbve="status-icon" class="inline-flex items-center justify-center w-5 h-5">
    {/* Initial loading state - gray spinner */}
    <svg class="w-4 h-4 text-gray-400 animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
      <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
    </svg>
  </div>

  {/* User info - will be hydrated by React */}
  <span class="flex items-center gap-2 text-sm text-gray-700 dark:text-gray-200">
    {/* Initial user icon */}
    <svg id="nav-avatar-container" data-x-kbve="avatar-container" class="w-4 h-4 opacity-70" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
      <circle cx="12" cy="7" r="4"></circle>
    </svg>
    <span id="nav-username" data-x-kbve="username" class="font-medium">Staryo</span>
  </span>
</nav>

{/* React component hydrates and takes over the DOM elements */}
<ReactNav client:only="react" />